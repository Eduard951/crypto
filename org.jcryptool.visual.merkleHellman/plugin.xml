   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="org.jcryptool.visual.merkleHellman.handlers.RestartHandler"
            commandId="org.jcryptool.visual.merkleHellman.command.Restart">
      </handler>
      <handler
            class="org.jcryptool.visual.merkleHellman.handlers.ResetHandler"
