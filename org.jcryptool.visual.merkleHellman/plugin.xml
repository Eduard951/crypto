            allPopups="false"
            locationURI="toolbar:org.jcryptool.visual.merkleHellman.views.MerkleHellmanView">
         <command
               commandId="org.jcryptool.visual.merkleHellman.command.Restart"
               icon="platform:/plugin/org.jcryptool.core.util/icons/icon_reset.png"
